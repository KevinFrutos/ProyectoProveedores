{% extends 'base.html.twig' %}

{% block title %}Mostrar Proveedores
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="css/proveedores/index.css"/>
{% endblock %}

{% block body %}
	<div class="container pt-5">
		<div class="flex">
			<a href="/" class="btn btn-secondary">Proveedores</a>
			<a href="/create" class="btn btn-secondary">Crear proveedor</a>
		</div>
		{% if accion == "eliminar" %}
			<div class="alert alert-danger" role="alert">
				Se ha eliminado un proveedor!
			</div>
		{% endif %}
		{% if proveedores %}
			<div class="tabla row pt-5">
				{% if accion == "crear" %}
					<div class="alert alert-success" role="alert">
						Se ha creado un nuevo proveedor!
					</div>
				{% elseif accion == "actualizar" %}
					<div class="alert alert-warning" role="alert">
						Se ha actualizado la información de un proveedor!
					</div>

				{% endif %}
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Nombre</th>
							<th>Email</th>
							<th>Telefono</th>
							<th>Tipo</th>
							<th>Activo</th>
							<th>Editar</th>
							<th>Eliminar</th>
						</tr>
					</thead>
					<tbody>
						{% for proveedor in proveedores %}
							<tr>
								<td>{{proveedor.nombre}}</td>
								<td>{{proveedor.email}}</td>
								<td>{{proveedor.telefono}}</td>
								<td>{{proveedor.tipo}}</td>
								<td>{{proveedor.activo == 1 ? 'Si' : 'No'}}</td>
								<td>
									<a href="/edit/{{proveedor.id}}" class="btn btn-warning">Editar</a>
								</td>
								<td>
									<a href="/destroy/{{proveedor.id}}" class="btn btn-danger">Eliminar</a>
								</td>
								<td></td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
			<div class="carta row justify-content-center align-items-center">
				{% for proveedor in proveedores %}
					<div class="card" style="width: 18rem;margin-right:auto;margin-left:auto;">
						<div class="card-body">
							<h5 class="card-title">Nombre:
								{{proveedor.nombre}}</h5>
							<p class="card-text">Email:
								{{proveedor.email}}</p>
							<p class="card-text">Tel:
								{{proveedor.telefono}}</p>
							<p class="card-text">Tipo:
								{{proveedor.tipo}}</p>
							<p class="card-text">¿Activo?:
								{{proveedor.activo == 1 ? 'Si' : 'No'}}</p>
							<a href="/edit/{{proveedor.id}}" class="btn btn-warning">Editar</a>
							<a href="/destroy/{{proveedor.id}}" class="btn btn-danger">Eliminar</a>
						</div>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<div class="alert alert-primary" role="alert">
				No existen proveedores en la base de datos.
			</div>
		{% endif %}
	</div>
{% endblock %}
